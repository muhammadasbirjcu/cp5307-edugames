<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/ranking_text"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="1st"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/player_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Guest 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/score_pct_text"
        app:layout_constraintStart_toEndOf="@+id/ranking_text"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/other_info_text"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="2 seconds remaining"
        app:layout_constraintEnd_toEndOf="@id/player_text"
        app:layout_constraintStart_toStartOf="@id/player_text"
        app:layout_constraintTop_toBottomOf="@id/player_text" />

    <TextView
        android:id="@+id/score_pct_text"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="20%"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player_text"
        app:layout_constraintBottom_toBottomOf="@+id/player_text" />

    <TextView
        android:id="@+id/score_details_text"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="center"
        android:text="x / x"
        app:layout_constraintRight_toRightOf="@+id/score_pct_text"
        app:layout_constraintLeft_toLeftOf="@+id/score_pct_text"
        app:layout_constraintTop_toBottomOf="@+id/score_pct_text" />

</androidx.constraintlayout.widget.ConstraintLayout>